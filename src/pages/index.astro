---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Skills from "../components/Skills.astro";
import Experience from "../components/Experience.astro";
import Proyects from "../components/Proyects.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import About from "../components/About.astro";
---

<Layout
  title="Portafolio de Gustavo Canales -Desarrollador y Programador Web"
/>
<main>
  <Header />
  <SectionContainer class="py-5 md:py-30">
    <Hero />
  </SectionContainer>
  <SectionContainer id="skills" class="py-5 md:py-22">
    <Skills />
  </SectionContainer>
  <SectionContainer id="experiencia" class="py-5 md:py-25">
    <Experience />
  </SectionContainer>
  <SectionContainer id="proyectos" class="py-5 md:py-25">
    <Proyects />
  </SectionContainer>
  <SectionContainer id="sobre-mi" class="py-5 md:py-25">
    <About />
  </SectionContainer>
  <SectionContainer>
    <Footer />
  </SectionContainer>
</main>
