---
import GitHub from "../icons/Github.astro";
import Java from "../icons/Java.astro";
import LinkButton from "./LinkButton.astro";
import JavaFX from "../icons/JavaFX.astro";

const TAGS = {
  NEXT: {
    name: "Java",
    class: "bg-black text-white",
    icon: Java,
  },
  JAVAFX: {
    name: "Scene Builder",
    class: "bg-black text-white",
    icon: JavaFX,
  },
};
const PROJECTS = [
  {
    title: "Software Examen de Admisión",
    description:
      "Utiliza un algoritmo de búsqueda para encontrar coincidencias entre las respuestas de los alumnos y las claves correctas de las preguntas, generando un informe detallado de los resultados obtenidos por cada alumno y su respectivo puntaje.",
    link: "",
    github: "https://github.com/Gustav0C/Software-Examen-Admision--Java-",
    image: "proyect1.png",
    tags: [TAGS.NEXT, TAGS.JAVAFX],
  },
  {
    title: "Generador de Exámenes",
    description:
      "Genera exámenes de admisión basando en un plantilla cargada en el sistema, permite agregar preguntas y respuestas, reordenarlas y exportar el examen en formato PDF.",
    link: "",
    github: "https://github.com/Gustav0C/Generador-de-Examenes--Java-",
    image: "proyect2.png",
    tags: [TAGS.NEXT, TAGS.JAVAFX],
  },
];
---

<div class="flex flex-col gap-y-16">
  <h3 class="text-center font-extrabold text-2xl">Proyectos</h3>
  {
    PROJECTS.map(({ image, title, description, tags, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt=""
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-1 rounded-full text-center items-center text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>
            <div class="mt-2 text-gray-700 dark:text-gray-400 text-justify">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
